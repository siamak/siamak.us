doctype xml
rss(version='2.0', xmlns:atom='http://www.w3.org/2005/Atom')
  channel
    title= site_title
    description= description
    link= site_url
    | <atom:link href="#{ site_url }/notes/rss.xml" rel="self" type="application/rss+xml" />
    for post, slug in public.notes._data
      item
        title= post.title
        description= post.description
        pubDate= post.date
        link= site_url + "/notes/" + slug
        guid(isPermaLink='true')= site_url + "/notes/" + slug