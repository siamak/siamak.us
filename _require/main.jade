section.main--content
    section.projects.grid__col.grid__col--one-of-one.active--fade
        .__wrapper.grid__tablet--model
            //- for item, slug in public.projects._data
            project = []
            for item, slug in public.projects._data
                if item.date
                    - item.slug = slug
                    - project.push(public.projects._data[slug])

            - projectlimit = 6 * 2;

            for item in project.sort(function(a,b){ a = new Date(a.date); b = new Date(b.date); return b<a?-1:b>a?1:0; }).slice(0, projectlimit)
                figure.project-item.grid__col.grid__col--one-of-three(id="project-of-#{ item.slug }")
                    picture
                        img(srcset="store/projects/image--#{ item.slug }.jpg")
                    figcaption
                        h4
                            i(class="icon--#{ item.situation }", title-face="is#{ item.situation }", title-dir)
                            =item.title
                        time(datetime="#{ new Date(item.date) }")= item.date
                        if item.cat
                            span.cat
                                | # 
                                = item.cat
                        p.parser= item.lead
                        if item.link
                            a.__button-solid-sexy(href="#{ item.link.url }" target="_blank")= item.link.text

